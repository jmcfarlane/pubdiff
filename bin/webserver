#! /usr/bin/env python

import os
import sys
from wsgiref.simple_server import make_server

cwd = os.getcwd()
sys.path.insert(0, cwd)

from chula.www.adapters.wsgi import adapter
from pubdiff.configuration import app as config

@adapter.wsgi
def application():
    return config

# Setup a simple server using the proxy app and it's configuration
port = 8080
httpd = make_server('', port, application)
try:
    print 'Starting server on: http://localhost:%s' % port
    httpd.serve_forever()
except KeyboardInterrupt:
    sys.exit()
